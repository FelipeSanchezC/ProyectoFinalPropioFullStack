<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Lista de Productos</h3>

            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th scope="col" class="col-4"> Nombre Producto    </th>
                        <th scope="col">               Descripcion Producto   </th>
                        <th scope="col">               Precio Producto       </th>
                        <th scope="col">               Imagen Producto </th>
                        <th scope="col">               Acciones   </th>
                    </tr>
                </thead>
                <tbody>
                    {{#each productos}}
                        <tr>
                            <td> {{nombreProducto}} </td>
                            <td> {{descProducto}} </td>
                            <td> {{precioProducto}} </td>
                            <td>
                                <img src="/uploads/{{imagenes}}" class="card-img-top mx-auto m-2 rounded-circle" style="width: 150px; height: 150px;display:block;">
                            </td>
                            <td> 
                                <div class="btn-group">
                                    <a href="/edit/{{id}}" class="btn btn-warning p-2">
                                        <i class="fa-solid fa-pencil"></i>
                                    </a>
                                    <a href="/delete/{{id}}" class="btn btn-danger p-2">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
    </div>
</div>